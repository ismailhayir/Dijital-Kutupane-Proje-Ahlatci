@model KutuphaneProje.ViewModels.DetailsViewModel[]

<h2>Kitap Yorumları</h2><br />
<button onclick="location.href='YorumEkle'" class="btn btn-az-primary btn-block">Yorum Ekle</button>
<div style="margin-top:25px;" class="col-lg-12">
    <table>
@if (Model != null)
{
    @foreach (var item in Model)
    {
  
                <tr>
                    <td style="width:20%"><b>Yorum Sahibi:</b>  @item.Adi</td>
                    <td style="width:30%"><b>Kitap Adı:</b>  @item.KitapAdi</td>
                    <td style="width:50%"><b>Yorum:</b>  @item.YorumAciklama</td>
                </tr>
           

    }
}
    </table>
</div>