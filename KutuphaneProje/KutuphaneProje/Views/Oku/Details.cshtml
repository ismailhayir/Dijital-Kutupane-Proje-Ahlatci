@model KutuphaneProje.Models.Book


@if (Model != null)
{
    <div class="row">
        
        <div class="col-lg-9">
            <table>
                <tr><td><b>Kitap Adı:</b>  @Model.KitapAdi</td> </tr>
                <tr><td><b>Yazar:</b>  @Model.KitapYazar</td></tr>
                <tr><td><b>Yayın Tarihi:</b> @Model.YayinTarihi</td></tr>
                <tr><td><b>Kitap ISBN:</b> @Model.KitapIsbn</td></tr>
                <tr><td><b>Yayınevi:</b> @Model.KitapYayinevi</td></tr>
                <tr><td><b>Özet:</b> @Model.KitapAciklama</td></tr>
            </table>
                <br>
            <button onclick="location.href='https://localhost:7257/Yorumlar/Details'" class="btn btn-az-primary btn-block">Kitap Yorumları</button>
        </div>

        <div class="col-lg-3">
           <center><img style="height:320px" src="@Model.KitapImg"></center>
        </div>

        <div style="margin-top:50px;" class="col-lg-12">
        <object data='~/pdf/@Model.KitapURL' type="application/pdf" width="100%" height="1024px">
        </object>
        </div>
    </div>

   
  
}

