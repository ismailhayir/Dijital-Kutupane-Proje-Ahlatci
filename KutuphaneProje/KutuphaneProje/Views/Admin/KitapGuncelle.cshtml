    </div>
    <div class="form-group">
        <label asp-for="KitapDil"></label>
        <input asp-for="KitapDil" class="form-control" />
        <span asp-validation-for="KitapDil" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="YayinTarihi"></label>
        <input asp-for="YayinTarihi" class="form-control" />
        <span asp-validation-for="YayinTarihi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KitapYayinevi"></label>
        <input asp-for="KitapYayinevi" class="form-control" />
