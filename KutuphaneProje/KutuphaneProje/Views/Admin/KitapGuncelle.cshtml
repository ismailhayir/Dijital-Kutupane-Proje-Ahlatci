    </div>
    <div class="form-group">
        <label asp-for="KitapAciklama"></label>
        <input asp-for="KitapAciklama" class="form-control" />
        <span asp-validation-for="KitapAciklama" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KitapURL"></label>
        <input asp-for="KitapURL" class="form-control" />
        <span asp-validation-for="KitapURL" class="text-danger"></span>
    </div>
