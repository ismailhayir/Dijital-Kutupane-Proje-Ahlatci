        <label asp-for="KitapIsbn"></label>
        <input asp-for="KitapIsbn" class="form-control" />
        <span asp-validation-for="KitapIsbn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KitapImg"></label>
        <input asp-for="KitapImg" class="form-control" />
